<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框仅显示在顶部 -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_light"
        android:dashWidth="0dp"
        android:dashGap="0dp" />

    <!-- 去除其他边的边框显示（通过内边距抵消） -->
    <padding
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp" />     <!-- 负内边距隐藏底部边框 -->
</shape>
