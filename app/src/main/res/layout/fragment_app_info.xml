<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 应用图标和基本信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/CardViewStyle"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 应用图标和名称 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/iv_app_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_app_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextTitle"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_package_name_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextCaption"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 操作按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:spacing="8dp">

                    <!-- 第一行按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:spacing="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_open_app"
                            style="@style/ButtonPrimary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/open_app"
                            android:backgroundTint="@color/success"
                            android:textColor="@color/button_text_on_success"
                            android:layout_marginEnd="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_close_app"
                            style="@style/ButtonSecondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/close_app"
                            android:backgroundTint="@color/warning"
                            android:textColor="@color/button_text_on_warning"
                            android:layout_marginHorizontal="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_freeze_app"
                            style="@style/ButtonSecondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/freeze_app"
                            android:backgroundTint="@color/error"
                            android:textColor="@color/button_text_on_error"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <!-- 第二行按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:spacing="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_backup_app"
                            style="@style/ButtonSecondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/backup_app"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/button_text_primary"
                            android:layout_marginEnd="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_restore_app"
                            style="@style/ButtonSecondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/restore_app"
                            android:backgroundTint="@color/accent"
                            android:textColor="@color/button_text_on_accent"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 版本信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/version_name"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_version_name_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="monospace" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/divider_color"
                        android:layout_marginHorizontal="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/version_code"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_version_code_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 路径信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/path_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- 应用路径 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_path"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_app_path_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:background="@color/gray_light"
                        android:padding="8dp"
                        android:singleLine="false" />
                </LinearLayout>

                <!-- 数据路径 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data_path"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_data_path_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:background="@color/gray_light"
                        android:padding="8dp"
                        android:singleLine="false" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 时间信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/install_time"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_install_time_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="monospace" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/divider_color"
                        android:layout_marginHorizontal="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_update_time"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_update_time_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 系统信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- 应用类型 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_type"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_app_type_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- 应用UID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_uid"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_app_uid_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <!-- 冻结状态 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/freeze_status"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_freeze_status_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- 签名信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signature_hash"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_signature_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:background="@color/gray_light"
                        android:padding="8dp"
                        android:singleLine="false" />
                </LinearLayout>

                <!-- 进程信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/running_processes"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_processes_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:background="@color/gray_light"
                        android:padding="8dp"
                        android:singleLine="false" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>