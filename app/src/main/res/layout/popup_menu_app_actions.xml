<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_menu_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 注入 -->
    <LinearLayout
        android:id="@+id/item_inject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_inject"
            android:contentDescription="注入图标" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inject_action"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 卸载 -->
    <LinearLayout
        android:id="@+id/item_unload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_clear"
            android:contentDescription="卸载图标" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unload_action"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 禁用 -->
    <LinearLayout
        android:id="@+id/item_disable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_check"
            android:contentDescription="禁用图标" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disable_action"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 打开 -->
    <LinearLayout
        android:id="@+id/item_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_android"
            android:contentDescription="打开图标" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_action"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
