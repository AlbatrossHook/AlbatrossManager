<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_menu_background"
    android:padding="8dp">

    <!-- 显示系统应用选项 -->
    <LinearLayout
        android:id="@+id/item_show_system"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_margin="2dp">

        <CheckBox
            android:id="@+id/cb_show_system"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:buttonTint="@color/primary" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_android"
            android:layout_marginEnd="12dp"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/show_system_apps"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- 过滤插件选项 -->
    <LinearLayout
        android:id="@+id/item_filter_plugin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_margin="2dp">

        <CheckBox
            android:id="@+id/cb_filter_plugin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:buttonTint="@color/primary" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_filter"
            android:layout_marginEnd="12dp"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter_plugins"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginVertical="8dp" />

    <!-- 全选选项 -->
    <LinearLayout
        android:id="@+id/item_select_all"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_margin="2dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_all"
            android:layout_marginEnd="12dp"
            app:tint="@color/success" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_all"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- 取消全选选项 -->
    <LinearLayout
        android:id="@+id/item_deselect_all"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_margin="2dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_clear_all"
            android:layout_marginEnd="12dp"
            app:tint="@color/error" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/deselect_all"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>
